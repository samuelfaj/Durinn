{
	"name": "durinn",
	"version": "1.0.0",
	"description": "A node.js serverless framework",
	"main": "handler",
	"directories": {
		"test": "tests"
	},
	"dependencies": {
		"express": "^4.17.1",
		"fs": "^0.0.1-security",
		"global": "^4.3.2",
		"mysql2": "^1.6.5",
		"sequelize": "^5.8.7",
		"sequelize-auto": "^0.4.29",
		"sequelize-cli": "^5.4.0",
		"serverless-http": "^2.0.2",
		"serverless-offline": "^5.0.1",
		"serverless-plugin-typescript": "1.1.7",
		"typescript": "^3.5.1"
	},
	"devDependencies": {
		"@types/bluebird": "^3.5.27",
		"@types/chai": "^4.1.7",
		"@types/express": "^4.17.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.0.7",
		"@types/sequelize": "^4.28.3",
		"@types/validator": "^10.11.0",
		"chai": "^4.2.0",
		"eslint": "^5.16.0",
		"husky": "^2.4.1",
		"lint-staged": "^8.2.1",
		"mocha": "^6.1.4",
		"mysql": "^2.17.1",
		"nodemon": "^1.19.1",
		"prettier": "^1.18.0",
		"serverless-content-encoding": "^1.1.0",
		"serverless-prune-plugin": "^1.3.2",
		"ts-mocha": "^6.0.0",
		"ts-node": "^8.2.0",
		"tslint-config-prettier": "^1.18.0"
	},
	"scripts": {
		"test": "npx ts-mocha -p tsconfig.json **/*.spec.ts --timeout 5000 --exit",
		"watch-test": "npx ts-mocha --watch-extensions ts --watch -p tsconfig.json **/*.spec.ts --timeout 15000",
		"deploy": "npm test && sls deploy --debug --aws-s3-accelerate",
		"start": "sls offline",
		"build": "npx tsc -p .",
		"playground": "npx nodemon --watch '**/*.ts' --exec 'ts-node' playground.ts",
		"prettier": "npx prettier --write --tab-width 4 --use-tabs **/*.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/samuelfaj/durinn.git"
	},
	"keywords": [
		"durinn",
		"framework",
		"nodejs",
		"typescript",
		"express"
	],
	"author": "Samuel Fajreldines",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/samuelfaj/durinn/issues"
	},
	"homepage": "https://github.com/samuelfaj/durinn#readme",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && npm test && npm run build"
		}
	},
	"lint-staged": {
		"*.{js,json,css,md,ts}": [
			"./node_modules/.bin/prettier --write --tab-width 4 --use-tabs",
			"git add"
		],
		"*.js": [
			"npx eslint --fix",
			"git add"
		]
	}
}
